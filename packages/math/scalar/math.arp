#
	This module defines standart mathematical functions for scalar floating point types.
#
import arpha.intrinsic

macro defineMathFunctions(T Type) = [>
	def abs(x $T) $T
	
	def pow(x $T,y $T) $T
	def sqrt(x $T) $T
	
	def exp(x $T) $T
	def log(x $T) $T
	
<]

defineMathFunctions(float)
defineMathFunctions(double)
