macro for {
	parser.expect("(")
	var name = parser.parse()
	parser.expect("in")
	var sequence = parser.parse()
	parser.expect(")")
	var body = parser.parse(ignoreNewlines: true)
	
	return [> {
			var seq = $sequence
			until(seq.isEmpty){
				def i = seq.current
				$body
				seq.moveNext()
			}
	} <]
}
