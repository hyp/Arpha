macro for {
	parser.expect("(")
	var name = parser.parse()
	parser.expect("in")
	var sequence = parser.parse()
	parser.expect(")")
	var body = parser.parse(ignoreNewlines: true)
	
	return [> {
			var range Range = $sequence
			until(range.empty){
				def i = &range.current
				$body
				range.moveNext()
			}
	} <]
}
